<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/ivOutgoingMessage"
        android:contentDescription="@string/outgoing_message"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/blueoutgoingpacket" />
    <TextView
        android:textSize="18sp"
        android:id="@+id/tvBodyMessage"
        android:padding="20dp"
        android:lines="3"
        android:layout_marginEnd="64dp"
        android:layout_width="match_parent"
        android:layout_height="64dp">
    </TextView>
    <ImageView
        android:id="@+id/ivIncommingMessage"
        android:contentDescription="@string/incomming_message"
        android:layout_marginStart="-64dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/redincomingpacket" />
</LinearLayout>